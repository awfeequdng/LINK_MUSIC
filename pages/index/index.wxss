@import "../play/fonts/fonts.wxss";
.body {
  background-color: #222;
  font: 400 30rpx/30rpx Microsoft YaHei;
}
.navbar {
  width: 100%;
  position: fixed;
  top: 0;
  z-index:999;
  background-color: #222;
  display: flex;
}
.navbar .nav {
  justify-content: center;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
  flex: 1;
}
.active {
  color: #ffcd32;
  padding: 2px 0;
  border-bottom: 2px solid #ffcd32;
}
.main-container {
  margin-top: 80rpx;
  width: 100%;
  color: #fff;
  text-align: center;
}
.bannerImgBox image {
  width: 100%;
  height: 300rpx;
}
.content-box {
  color:#ffcd32;
  text-align: center;
}
.content-box .title {
  padding: 30rpx 0rpx;
}
.list-box {
  width: 100%;
  box-sizing:border-box;
  padding: 30rpx 20rpx;
  display: flex;
}
.img-box,.singer-box{
  flex: 1;
  vertical-align: middle;
}
.singer-box view{
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.singer-box view image{
  width: 100%;
  height: 100%;
}
.img-box image{
  width: 120rpx;
  height: 120rpx;
}
.title-content {
  flex: 3;
  text-align: left; 
}
.title-content text{
  display: block;
}
.title-content .title {
  color: #fff;
  padding:26rpx 0;
}
.title-content .article {
  color:hsla(0,0%,100%,.3);
  font-size: 24rpx;
}
.search-box {
  color:hsla(0,0%,100%,.3);
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #222;
  text-align: left;
  box-sizing: border-box;
  padding: 20rpx 50rpx;
}
.input-box {
  width: 100%;
  margin-top: 100rpx;
  position: relative;
}
input {
  display: inline-block;
  box-sizing: border-box;
  height: 80rpx;
  width: 100%;
  padding: 0 70rpx;
  background-color: #333;
  border-radius: 10rpx;
}
.search-text {
  padding: 50rpx 0;
}
.search-icon {
  position: absolute;
  left: 18rpx;
  top: 24rpx;
  font-size: 40rpx;
}
.i-text {
  display: inline-block;
  background-color: #333;
  margin: 12rpx 30rpx 12rpx 0;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
}
.container-ph {
  box-sizing: border-box;
  padding: 30rpx 50rpx;
}
.ph-list-box {
  display: flex;
  background-color:#333; 
  margin-bottom:40rpx; 
}
.ph-img-box {
  flex: 1;
}
.ph-img-box image{
  width: 200rpx;
  height: 200rpx;
}
.content-boxs {
  flex: 3;
  text-align: left;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: hsla(0,0%,100%,.3);
}
.content-boxs text{
  display: block;
  vertical-align: middle;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  line-height: 52rpx;
}
.cloes {
  position:absolute;
  right:22rpx;
  top:26rpx;
  font-size: 36rpx;
}
.musicList {
  margin-top:50rpx; 
  width: 100%;
  height: 74%;
  overflow-y: scroll;
}

.musicList .musicTitle-list view {
  margin: 20rpx 0;
  line-height: 36rpx;
  vertical-align: middle;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.musicList .musicTitle-list view i {
  margin-right:16rpx; 
}
.nullImg {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -108rpx;
  margin-top:-100rpx; 
  text-align: center;
}
.nullImg image {
  width: 200rpx;
  height: 200rpx;
}
.nullImg text {
  margin-top:30rpx; 
  display: block;
  color: #ffcd32;
}