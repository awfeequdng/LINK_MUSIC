@import "../play/fonts/fonts.wxss";
.container-box {
  width: 100%;
  position: relative;
}
.headerImg-box {
  padding-top:70%; 
  width: 100%;
  background-size: cover;
  background-position: center center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
.filter{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1;
}
.play-btn {
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1px solid #ffcd32;
  border-radius: 40rpx;
  z-index: 10;
}
.play-btn i{

}
.play-btn text{
  font-size: 28rpx;
  color: #ffcd32;
}
.contentList-box {
  margin-top: 60%;
  width: 100%;
  background-color: #222;
}
.contentList {
  box-sizing: border-box;
  padding: 30rpx 50rpx; 
  font-size: 30rpx;
}
.list {
  color: #ffcd32;
  font-size: 32rpx;
  text-align: center;
  padding: 30rpx 0;
}
.title{
  color: #fff;
  display: block;
}
.detail{
  color: hsla(0,0%,100%,.3);
}
.title,.detail{
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.cont-flex {
  display: flex;
}
.ph_numbers {
  flex: 0 0 80rpx;
  line-height: 80rpx;
  font-size: 44rpx;
  color: #ffcd32;
}

.ph_icons image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 12rpx;
}
.loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #222;
  overflow: hidden;
}
.loading .icon-loading{
  color: white;
  font-size: 100rpx;
  position:absolute;
  top: 50%;
  left: 50%;
  margin-left:-5%; 
  margin-top:-5%; 
  animation: loadings 3s infinite linear;
  color: #ffcd32;
}

@keyframes loadings{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}